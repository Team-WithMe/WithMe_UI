{
	"compilerOptions": {
		"outDir": "build",
		"module": "esnext",
		"lib": ["DOM", "ESNext"],
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"target": "esnext",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"moduleResolution": "node"
	},
	"include": ["src"],
	"exclude": ["node_modules", "build"]
}
